<EditForm Model="@product" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Nombre Producto :</label>
        <div>
            <InputText @bind-Value="@product.name_product" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => product.name_product)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Tipo Producto: </label>
            <div>
                <InputSelect @bind-Value="@product.id_type_product" class="form-control col-sm-3"> 
                   <option value="Select">--Select--</option>
                   <option value="1">Terminado</option>
                   <option value="2">Materia Prima</option>
                   <option value="3">Insumo</option>
                </InputSelect>
                <ValidationMessage For="@(() => product.id_type_product)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Codigo Producto :</label>
            <div>
                <InputText @bind-Value="@product.code_product" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => product.code_product)" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Lote :</label>
        <div>
            <InputText @bind-Value="@product.lote" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => product.lote)" />
        </div>
    </div>
    <div class="form-group">
        <label>Cantidad Disponible :</label>
        <div>
            <InputNumber @bind-Value="@product.qty_available" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => product.qty_available)" />
        </div>
    </div>
    <div class="form-group">
        <label>Cantidad En Produccion :</label>
        <div>
            <InputNumber @bind-Value="@product.qty_production" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => product.qty_production)" />
        </div>
    </div>
        <div class="form-group">
        <label>Cantidad Solicitada :</label>
        <div>
            <InputNumber @bind-Value="@product.qty_order" class="form-control col-sm-3" />
            <ValidationMessage For="@(() => product.qty_order)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Fecha Fabricacion :</label>
            <div>
                <InputDate @bind-Value="@product.date_manufacturing" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => product.date_manufacturing)" />
            </div>
        </div>
    </div>
        <div class="form-group ">
        <div>
            <label>Fecha Vencimiento :</label>
            <div>
                <InputDate @bind-Value="@product.date_expiration" class="form-control col-sm-3" />
                <ValidationMessage For="@(() => product.date_expiration)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>

@code {
    [Parameter]
    public Product product { get; set; }
    [Parameter]
    public string ButtonText { get; set; } = "Save";
    [Parameter]
    public EventCallback OnValidSubmit { get; set; }
}